generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
  // provider = "mysql"
  // url = "mysql://admin:123123123@database-1.c9loipojda5k.us-east-2.rds.amazonaws.com:3306/Demo"
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
  address String?
  posts Post[]
}

model Post {
  id        Int     @id @default(autoincrement())
  title     String
  content   String?
  published Boolean @default(false)
  author    User    @relation(fields: [authorId], references: [id])
  authorId  Int
}
